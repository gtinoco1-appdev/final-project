<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All coral comments
    </h1>

    <a href="/coral_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new coral comment
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Coral
        </th>

        <th>
          Commenter
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @coral_comments.each do |coral_comment| %>
      <tr>
        <td>
          <%= coral_comment.id %>
        </td>

        <td>
          <%= coral_comment.coral_id %>
        </td>

        <td>
          <%= coral_comment.commenter_id %>
        </td>

        <td>
          <%= time_ago_in_words(coral_comment.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(coral_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/coral_comments/<%= coral_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
