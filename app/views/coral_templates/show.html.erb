<div class="row">
  <div class="col-lg-1">
    <a href="/corals" class="btn btn-secondary">
      <i class="fas fa-arrow-left"> </i> back
    </a>
  </div>

  <div class="col-lg-6 offset-lg-1">
    <h2>
      <span class="btn-group">
        <%= @coral.title %>

        <% i = Like.find_by({ :user_id => current_user.id, :coral_id => @coral.id }) %>
        <% if i == nil   %>

          <form class="form-inline" action="/create_like" method="post">
            <input type="hidden" name="coral_id" value="<%= @coral.id %>">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">

            <button class="btn btn-link pull-left">
              <i class="far fa-star text-warning"></i>
            </button>
          </form>
        </span>
      <% else %>
        <a href="/delete_like/<%= i.id %>" class="btn btn-link pull-left">
          <i class="fas fa-star text-warning"></i>
        </a>
      <% end %>
    </h2>

  </div>
</div>
<!--row close-->

<div class="row mb-3">


  <% p = Coral.find_by({ :seller_id => current_user.id, :id => @coral.id }) %>
  <% if p == nil   %>
    <div class="col-lg-2 col-md-3">
    </div>

  <% else %>
    <div class="col-lg-2 col-md-3 pt-3">
      <div class="mb-3">
        <a href="/corals/<%= @coral.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit post
        </a>
      </div>

      <div class="mb-3">
        <a href="/delete_coral/<%= @coral.id %>" class="btn btn-block btn-outline-secondary">
          Delete coral
        </a>
      </div>
    </div>
  <% end %>

  <div class="col-lg-4 col-md-4 col-sm-8">

    <div>
      <a href="/families/<%= @coral.family.id %>" class="text-secondary">
        <%= @coral.family.title %>
      </a>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <p class ="text-secondary text-left mb-0">
          <small>
            posted <%= time_ago_in_words(@coral.created_at) %> ago
          </small>
        </p>
      </div>
      <div class="col-lg-6">
        <div class="text-right text-secondary"> (<%= @coral.city %>,  <%= @coral.state %>)
        </div>
      </div>
    </div>


    <div class="card mb-2 border-light">

      <div id="carouselExampleIndicators" class="carousel slide" data-pause="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="<%= @coral.photo1 %>" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="<%= @coral.photo2 %>" alt="Second slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <% @coral.comments.each do |comment| %>
      <li class="media mb-2">
        <div class="media-body">
          <h6>
            <a href="/users/<%= comment.commenter.id %>">
              <%= comment.commenter.username %>
            </a>
            <small>
              <%= time_ago_in_words(comment.created_at) %> ago
            </small>
          </h6>
          <%= comment.body %>
        </div>
      </li>
    <% end %>

    <form action="/create_coral_comment" method="post">

      <div class="form-group">
        <input type="hidden" id="coral_id" name="coral_id" class="form-control" value="<%= @coral.id %>">
      </div>

      <div class="form-group">
        <input type="hidden" id="commenter_id" name="commenter_id" class="form-control" value="<%= current_user.id %>">
      </div>

      <div class="form-group">
        <label for="body">
        </label>
        <input type="text" id="body" name="body" class="form-control" placeholder="Ask a question">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Submit
      </button>
    </form>
  </div>

  <div class="col-lg-3 col-md-5 col-sm-8">
    <h5 class="text text-center pb-3">
      $<%= @coral.price.round %>
    </h5>
    <div class="text text-center">
      <%= @coral.caption %>
    </div>
  </div>

  <div class="col-lg-2">

    <div class="card border-white p-3">
      <a href="/users/<%= @coral.seller.id %>">
        <img src="<%= @user.avatar %>" class="img-thumbnail rounded-circle border-secondary ">
        <a/>

        <div class="row">
          <div class="col-6 pr-0">
            <div class="text-right">
              <a href="/users/<%= @coral.seller.id %>" class="text-secondary">
                <%= @coral.seller.username %>
              </a>
            </div>
          </div>

          <div class="col-6">
            <% i = FollowRequest.find_by({ :sender_id => current_user.id, :recipient_id => @coral.seller.id }) %>
            <% if i == nil   %>

              <form class="form-inline" action="/create_follow_request" method="post">

                <input type="hidden" name="sender_id" value="<%= current_user.id %>">
                <input type="hidden" name="recipient_id" value="<%= @coral.seller.id %>">

                <button class="btn btn-link pt-0 pl-0">
                  <i class="fas fa-user-plus text-dark"></i>
                </button>

              </form>
            <% else %>
              <a href="/delete_follow_request/<%= i.id %>" class="btn btn-link pt-0 pl-0">
                <i class="fas fa-user-plus text-success"></i>
              </a>
            <% end %>
          </div>
        </div>

        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyB_nAWVr-18Oi_XoadzVHmNT2vevvJfev4"></script>
        <script>
          var citymap = {
                  chicago: {
                  center: {lat: <%= @latitude %>, lng: <%= @longitude %> },
                  population: 500
                    }
          };
          
            var map;
            function initialize() {
              var myLatlng = new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>);
              var mapOptions = {
                zoom: 12,
                center: myLatlng
              };
              map = new google.maps.Map(document.getElementById('map-canvas'),
              mapOptions);
          
              // var marker = new google.maps.Marker({
              //   position: myLatlng,
              //   map: map,
              //   title: 'Statue of Liberty'
              // });
          
              for (var city in citymap) {
                // Add the circle for this city to the map.
                var cityCircle = new google.maps.Circle({
                  strokeColor: '#1f6b6b',
                  strokeOpacity: 0.4,
                  strokeWeight: 1,
                  fillColor: '#1f6b6b',
                  fillOpacity: 0.35,
                  map: map,
                  center: citymap[city].center,
                  radius: Math.sqrt(citymap[city].population) * 100
          
                });
              }
            }
            google.maps.event.addDomListener(window, 'load', initialize);
        </script>
        <div id="map-canvas" style="width: 100%; height: 250px">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2">
    </div>

    <div class="col-lg-8">
      <hr>
      <h6>
        <%=@coral.seller.username%>'s other posts
      </h6>

      <div class="card-deck mb-3" >
        <% @user.corals.where.not(id: @coral.id).each_with_index do |coral, index| %>
          <% if index > 3 %>
            <% break %>
          <% else %>


            <div class="card">

              <a href="/corals/<%= coral.id %> ">
                <img src="<%= coral.photo1 %>" class="card-img-top">
              </a>
              <div class="card-img-overlay pr-1 pt-1">
                <% i = Like.find_by({ :user_id => current_user.id, :coral_id => coral.id }) %>
                <% if i == nil   %>
                  <div class="text-right">
                    <form class="form" action="/create_like" method="post">
                      <input type="hidden" name="coral_id" value="<%= coral.id %>">
                      <input type="hidden" name="user_id" value="<%= current_user.id %>">
                      <button class="btn btn-link">
                        <i class="far fa-star text-warning"></i>
                      </button>
                    </form>
                  </div>
                <% else %>
                  <div class="text-right">
                    <a href="/delete_like/<%= i.id %>" class="btn btn-link">
                      <i class="fas fa-star text-warning"></i>
                    </a>
                  </div>
                <% end %>
              </div>

              <div class="card-body pt-0">
                <h7>
                  <a href="/corals/<%= coral.id %> ">
                    <div class="text-dark"> <%= coral.title %>
                    </div>
                  </a>
                  <span class="badge badge-light">
                    $<%= coral.price.round %>
                  </span>
                </h7>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-2">
  </div>
