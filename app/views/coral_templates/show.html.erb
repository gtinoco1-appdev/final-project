<div class="row">
  <div class="col-lg-1">
    <a href="/corals" class="btn btn-secondary">
      <i class="fas fa-arrow-left"> </i> back
    </a>
  </div>

  <div class="col-md-6 offset-md-1">
    <h2>
      <span class="btn-group">
        <%= @coral.title %>

        <% i = Like.find_by({ :user_id => current_user.id, :coral_id => @coral.id }) %>
        <% if i == nil   %>

          <form class="form-inline" action="/create_like" method="post">
            <input type="hidden" name="coral_id" value="<%= @coral.id %>">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">

            <button class="btn btn-link pull-left">
              <i class="far fa-star text-warning"></i>
            </button>
          </form>
        </span>
      <% else %>
        <a href="/delete_like/<%= i.id %>" class="btn btn-link pull-left">
          <i class="fas fa-star text-warning"></i>
        </a>
      <% end %>

    </h2>

    <a href="/families/<%= @coral.family.id %>" class="text-secondary">
      <%= @coral.family.title %>
    </a>
    <p class ="text-secondary mb-0">
      <small>
        posted <%= time_ago_in_words(@coral.created_at) %> ago
      </small>
    </p>
  </div>

  <div class="col-md-2">

    <div class="card">
      <div class="card-body">
        <p class="card-text">
          <img src="<%= @coral.seller.avatar %>" class="img-responsive">
          <a href="/users/<%= @coral.seller.id %>">
            <%= @coral.seller.username %>
          </p>


        </div>
      </div>

    </a>
  </div>

</div>

<div class="row mb-3">
  <% p = Coral.find_by({ :seller_id => current_user.id, :id => @coral.id }) %>
  <% if p == nil   %>
    <div class="col-lg-2 col-md-3">
    </div>

  <% else %>
    <div class="col-lg-2 col-md-3">
      <div class="mb-3">
        <a href="/corals/<%= @coral.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit post
        </a>
      </div>

      <div class="mb-3">
        <a href="/delete_coral/<%= @coral.id %>" class="btn btn-block btn-outline-secondary">
          Delete coral
        </a>
      </div>
    </div>
  <% end %>


  <div class="col-lg-4 col-md-4 col-sm-8">
    <div class="card mb-2 border-light">

      <div id="carouselExampleIndicators" class="carousel slide" data-pause="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="<%= @coral.photo1 %>" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="<%= @coral.photo2 %>" alt="Second slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="col-lg-4 col-md-6 col-sm-8">
    <h6 class="text">
      $<%= @coral.price %>
    </h6>
    <div class="text">
      <%= @coral.caption %>
    </div>
  </div>

</div>

<div class="row mb-3">
  <div class="col-lg-4 offset-lg-2">

    <% @coral.comments.each do |comment| %>
      <li class="media mb-2">
        <div class="media-body">
          <h6>
            <a href="/users/<%= comment.commenter.id %>">
              <%= comment.commenter.username %>
            </a>
            <small>
              <%= time_ago_in_words(comment.created_at) %> ago
            </small>
          </h6>
          <%= comment.body %>
        </div>
      </li>
    <% end %>

    <form action="/create_coral_comment" method="post">

      <div class="form-group">
        <input type="hidden" id="coral_id" name="coral_id" class="form-control" value="<%= @coral.id %>">
      </div>

      <div class="form-group">
        <input type="hidden" id="commenter_id" name="commenter_id" class="form-control" value="<%= current_user.id %>">
      </div>

      <div class="form-group">
        <label for="body">
        </label>
        <input type="text" id="body" name="body" class="form-control" placeholder="Message the seller">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Add comment
      </button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <hr>
    <h6>
      <%=@coral.seller.username%>'s other posts
    </h6>

    <div class="col-md-9">
      <div class="card-deck mb-3">
        <% @user.corals.each_with_index do |coral, index| %>
          <% if index > 4 %>
            <% break %>
          <% else %>


            <div class="card">
              <div class="card-body pt-2">
                <div class= "row pt-0 pl-2">

                  <h6>
                    <a href="/corals/<%= coral.id %> ">
                      <div class="text-dark"> <%= coral.title %>
                      </div>
                    </a>
                    <span class="badge badge-secondary">
                      $<%= coral.price %>
                    </span>
                  </h6>
                </div>

                <div class="col-lg-2 pl-0 pr-0">
                  <div>

                    <% i = Like.find_by({ :user_id => current_user.id, :coral_id => coral.id }) %>
                    <% if i == nil   %>
                      <form class="form-inline" action="/create_like" method="post">
                        <input type="hidden" name="coral_id" value="<%= coral.id %>">
                        <input type="hidden" name="user_id" value="<%= current_user.id %>">
                        <button class="btn btn-link">
                          <i class="far fa-star text-warning"></i>
                        </button>
                      </form>

                    <% else %>
                      <a href="/delete_like/<%= i.id %>" class="btn btn-link">
                        <i class="fas fa-star text-warning"></i>
                      </a>
                    <% end %>
                  </div>
                </div>
              </div>

              <a href="/corals/<%= coral.id %> ">
                <img src="<%= coral.photo1 %>" class="img-fluid">
              </a>


            </div>

          

        <% end %>
      <% end %>
      </div>
    </div>

  <div class="col-2">
  </div>
</div>
