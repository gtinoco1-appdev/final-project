<div class="row mb-3">
  <div class="col-md-12">

    <a href="/corals/new" class="btn btn-block btn-outline-secondary">
      List New Coral
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= search_form_for @q do |f| %>
      <p class="lead">Narrow results:</p>

      <div class="form-group">
        <%= f.label :title_cont, "Title containing" %>
        <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
      </div>

      <div class="form-group">
        <%= f.label :family_id_eq, "Family" %>
        <%= f.select :family_id_eq, options_from_collection_for_select(Family.all, :id, :title, @q.family_id_eq), { :include_blank => true }, :class => "form-control" %>
      </div>

      <%= f.submit :class => "btn btn-primary btn-block" %>
      <a href="/corals" class="btn btn-default btn-block">Clear filters</a>
    <% end %>
  </div>

  <div class="col-md-10">
    <% @corals.each_with_index do |coral, index| %>
      <% if index % 3 == 0 %>
        <div class="card-deck mb-3">
      <% end %>

        <div class="card">
          <div class="card-body">
            <a href="/corals/<%= coral.id %> ">
              <h5 class="card-title text-dark"> <%= coral.title %> </h5>
              <img src="<%= coral.photo1 %>" class="img-fluid">
            </a>
            <div class="text-right font-weight-bold"> <%= coral.created_at.strftime("%b %d") %></div>
            <div class="text-right font-weight-bold"> $<%= coral.price %></div>
          </div>
        </div>
        <% if index % 3 == 2 %>
        </div>
      <% end %>
      

    <% end %>
  </div>
</div>

<hr>
