<div class = "row">

  <div class="col-lg-1 col-md-1">
    <a href="/corals/" class="btn btn-secondary">
      <i class="fa fa-arrow-left" ></i>
      Back
    </a>
  </div>

  <div class ="col-lg-8">
    <h3>
      Post a new coral
    </h3>
  </div>
</div>


<div class = "row">

  <div class ="col-lg-5 offset-lg-1">

    <form action="/create_coral" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">
          Title
        </label>
        <input type="text" id="title" name="title" class="form-control">
      </div>

      <div class="form-group">
        <label for="family_id">
          Family
        </label>
        <%= select_tag(:family_id, options_from_collection_for_select(Family.all, :id, :title, @coral.family_id), :class => "form-control") %>
      </div>

      <div class="form-group">
        <label for="location_id">
          Location
        </label>

        <input type="text" id="location_id" name="location_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="caption">
          Caption
        </label>
        <input type="text" id="caption" name="caption" class="form-control">
      </div>

    </div>
    <div class ="col-lg-5">

      <div class="form-group">
        <label for="photo1">
          Photo1
        </label>

        <input type="file" id="photo1" name="photo1" class="form-control">
      </div>

      <div class="form-group">
        <label for="photo2">
          Photo2
        </label>
        <input type="file" id="photo2" name="photo2" class="form-control">
      </div>

      <div class="form-group">
        <input type="hidden" name="seller_id" class="form-control" value="<%= current_user.id %>">
      </div>

      <div class="row mb-3">
        <div class = "col-lg-4">
          <label for="price">
            Price ($)
          </label>
          <input type="text" id="price" name="price" class="form-control">
        </div>

        <div class="col-lg-8">
          <label for="obo">
            Would you accept best offers?
          </label>
          <%= select_tag(:obo, options_for_select(["Yes", "No"]), :class => "form-control") %>
        </div>
      </div>


      <div class="form-group">
        <label for="status">
          Post Status
        </label>
        <%= select_tag(:status, options_for_select([["Active"], ["Draft"], ["Sold"]]), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create coral
      </button>
    </form>

  </div>
</div>
<!--row-->

<hr>
