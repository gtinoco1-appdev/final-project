<!-- Validation failure messages -->
<% if @activity_type.present? %>
  <% if @activity_type.errors.any? %>
    <% @activity_type.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new activity type
</h1>


<hr>

<form action="/create_activity_type" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @activity_type.title %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create activity type
  </button>
</form>

<hr>

<a href="/activity_types">
  Go back
</a>
