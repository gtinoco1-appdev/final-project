<div class="row">
  <div class="col-md-8 offset-md-2">
    <h3>
      <%= @user.username %>'s posts
    </h3>
  </div>
</div>

<div class="row">

  <div class="col-lg-2">

    <div class="card border-white p-3">
      <a href="/users/<%= @user.id %>">
        <img src="<%= @user.avatar %>" class="img-thumbnail rounded-circle border-secondary ">
        <a/>
        <p class="card-text text-center">

          <div class="row">
            <div class="col-6 pr-0">
              <div class="text-right">
                <a href="/users/<%= @user.id %>" class="text-secondary">
                  <%= @user.username %>
                </a>
              </div>
            </div>

            <div class="col-6">
              <% i = FollowRequest.find_by({ :sender_id => current_user.id, :recipient_id => @user.id }) %>
              <% if i == nil   %>

                <form class="form-inline" action="/create_follow_request" method="post">

                  <input type="hidden" name="sender_id" value="<%= current_user.id %>">
                  <input type="hidden" name="recipient_id" value="<%= @user.id %>">

                  <button class="btn btn-link pt-0 pl-0">
                    <i class="fas fa-user-plus text-dark"></i>
                  </button>

                </form>
              <% else %>
                <a href="/delete_follow_request/<%= i.id %>" class="btn btn-link pt-0 pl-0">
                  <i class="fas fa-user-plus text-success"></i>
                </a>
              <% end %>
            </div>
          </div>


          <p class= "text-center">member since <%= @user.created_at.strftime("%b %Y") %>
          </p>
        </p>
      </div>
    </div>
    <% total = @user_active_corals.count %>
    <% stop = total - (total % 3) %>

    <% if total % 3 == 0 %>
      <div class="col-md-9">
      <% end %>


      <%  @user_active_corals.each_with_index do |coral, index| %>
        <% if index == stop %>
          <% break %>
        <% else %>

          <% if index % 3 == 0 %>
            <div class="card-deck mb-3">
            <% end %>

            <div class="card">
              <div class="card-body pt-2">
                <div class= "row pt-0 pl-2">

                  <div class="col-lg-10 pl-1">
                    <h6>
                      <a href="/corals/<%= coral.id %> ">
                        <div class="text-dark"> <%= coral.title %>
                        </div>
                      </a>
                      <span class="badge badge-secondary">
                        $<%= coral.price.round %>
                      </span>
                    </h6>
                  </div>

                  <div class="col-lg-2 pl-0 pr-0">
                    <div>

                      <% i = Like.find_by({ :user_id => current_user.id, :coral_id => coral.id }) %>
                      <% if i == nil   %>
                        <form class="form-inline" action="/create_like" method="post">
                          <input type="hidden" name="coral_id" value="<%= coral.id %>">
                          <input type="hidden" name="user_id" value="<%= current_user.id %>">
                          <button class="btn btn-link">
                            <i class="far fa-star text-warning"></i>
                          </button>
                        </form>

                      <% else %>
                        <a href="/delete_like/<%= i.id %>" class="btn btn-link">
                          <i class="fas fa-star text-warning"></i>
                        </a>
                      <% end %>
                    </div>
                  </div>
                </div>

                <a href="/corals/<%= coral.id %> ">
                  <img src="<%= coral.photo1 %>" class="img-fluid">
                </a>
                <div class="text-right font-weight-bold"> <%= coral.created_at.strftime("%b %d") %>
                </div>


              </div>
            </div>

            <% if index % 3 == 2 %>
            </div>
          <% end %>

        <% end %>
      <% end %>

      <% if total % 3 == 0 %>

      <% end %>


      <div class = "col-md-2">
      </div>

      <% if total % 3 == 1 %>
        <% coral = @user_active_corals[stop] %>

        <div class = "col-md-3">
          <div class = "card-deck">

            <div class="card">
              <div class="card-body pt-2">
                <div class= "row pt-0 pl-2">

                  <div class="col-lg-10 pl-1">
                    <h6>
                      <a href="/corals/<%= coral.id %> ">
                        <div class="text-dark"> <%= coral.title %>
                        </div>
                      </a>
                      <span class="badge badge-secondary">
                        $<%= coral.price.round %>
                      </span>
                    </h6>
                  </div>

                  <div class="col-lg-2 pl-0 pr-0">
                    <div>

                      <% i = Like.find_by({ :user_id => current_user.id, :coral_id => coral.id }) %>
                      <% if i == nil   %>
                        <form class="form-inline" action="/create_like" method="post">
                          <input type="hidden" name="coral_id" value="<%= coral.id %>">
                          <input type="hidden" name="user_id" value="<%= current_user.id %>">
                          <button class="btn btn-link">
                            <i class="far fa-star text-warning"></i>
                          </button>
                        </form>

                      <% else %>
                        <a href="/delete_like/<%= i.id %>" class="btn btn-link">
                          <i class="fas fa-star text-warning"></i>
                        </a>
                      <% end %>
                    </div>
                  </div>
                </div>

                <a href="/corals/<%= coral.id %> ">
                  <img src="<%= coral.photo1 %>" class="img-fluid">
                </a>
                <div class="text-right font-weight-bold"> <%= coral.created_at.strftime("%b %d") %>
                </div>


              </div>
            </div>

          </div>

        </div>
      <% end %>

      <% if total % 3 == 2 %>

        <div class = col-md-6>
          <div class = "card-deck">

            <% @user_active_corals[stop..-1].each_with_index do |coral, index| %>

              <div class="card">
                <div class="card-body pt-2">
                  <div class= "row pt-0 pl-2">

                    <div class="col-lg-10 pl-1">
                      <h6>
                        <a href="/corals/<%= coral.id %> ">
                          <div class="text-dark"> <%= coral.title %>
                          </div>
                        </a>
                        <span class="badge badge-secondary">
                          $<%= coral.price.round %>
                        </span>
                      </h6>
                    </div>

                    <div class="col-lg-2 pl-0 pr-0">
                      <div>

                        <% i = Like.find_by({ :user_id => current_user.id, :coral_id => coral.id }) %>
                        <% if i == nil   %>
                          <form class="form-inline" action="/create_like" method="post">
                            <input type="hidden" name="coral_id" value="<%= coral.id %>">
                            <input type="hidden" name="user_id" value="<%= current_user.id %>">
                            <button class="btn btn-link">
                              <i class="far fa-star text-warning"></i>
                            </button>
                          </form>

                        <% else %>
                          <a href="/delete_like/<%= i.id %>" class="btn btn-link">
                            <i class="fas fa-star text-warning"></i>
                          </a>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <a href="/corals/<%= coral.id %> ">
                    <img src="<%= coral.photo1 %>" class="img-fluid">
                  </a>
                  <div class="text-right font-weight-bold"> <%= coral.created_at.strftime("%b %d") %>
                  </div>


                </div>
              </div>

            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>


