<% if @family.errors.any? %>
  <% @family.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit family #<%= @family.id %>
</h1>

<hr>

<form action="/update_family/<%= @family.id %>" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @family.title %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update family
  </button>
</form>

<hr>

<a href="/families">
  Go back
</a>
